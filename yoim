--[[
üåà Stylish Egg GUI
Made by: RenScriptHub
Supports: ESP with pet name + rarity, reroll system
]]

local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- === Egg Pools
local eggPools = {
	["Common Egg"] = {"Bunny", "Chick", "Mouse"},
	["Bug Egg"] = {"Snail", "Caterpillar", "Giant Ant"},
	["Night Egg"] = {"Hedgehog", "Frog", "Echo Frog", "Blood Hedgehog", "Blood Kiwi"},
	["Mythical Egg"] = {"Squirrel", "Red Giant Ant", "Grey Mouse", "Brown Mouse"},
	["Paradise Egg"] = {"Ostrich", "Peacock", "Capybara", "Mimic Octopus"},
	["Oasis Egg"] = {"Meerkat", "Sandsnake", "Oxolotl"},
	["Primal Egg"] = {"Brontosaurus", "Spinosaurus", "Pterodactyl", "Raptor"},
	["Dinosaur Egg"] = {"Brontosaurus", "Raptor", "Pterodactyl"}
}

-- === Pet Rarity
local petRarity = {
	["Bunny"] = "Common", ["Chick"] = "Common", ["Mouse"] = "Common",
	["Snail"] = "Common", ["Caterpillar"] = "Common", ["Frog"] = "Common",
	["Giant Ant"] = "Rare", ["Hedgehog"] = "Rare", ["Grey Mouse"] = "Rare",
	["Peacock"] = "Rare", ["Meerkat"] = "Rare",
	["Echo Frog"] = "Epic", ["Blood Hedgehog"] = "Epic", ["Mimic Octopus"] = "Epic",
	["Sandsnake"] = "Epic", ["Spinosaurus"] = "Epic",
	["Blood Kiwi"] = "Legendary", ["Red Giant Ant"] = "Legendary",
	["Brontosaurus"] = "Legendary", ["Pterodactyl"] = "Legendary", ["Raptor"] = "Legendary"
}

local eggNames = {} for name in pairs(eggPools) do table.insert(eggNames, name) end

-- === GUI Setup
local gui = Instance.new("ScreenGui", playerGui)
gui.Name = "RenEggGUI"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 250, 0, 360)
frame.Position = UDim2.new(0, 20, 0.25, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 0, 40)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 40)
title.Text = "üòà Egg Randomizer\nMade by RenScriptHub"
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextWrapped = true
title.BackgroundTransparency = 1

local layout = Instance.new("UIListLayout", frame)
layout.Padding = UDim.new(0, 8)
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.FillDirection = Enum.FillDirection.Vertical
title.LayoutOrder = 0

-- === Button Maker
local function makeBtn(text, color, callback)
	local btn = Instance.new("TextButton", frame)
	btn.Size = UDim2.new(1, -20, 0, 45)
	btn.Position = UDim2.new(0, 10, 0, 0)
	btn.BackgroundColor3 = color
	btn.Text = text
	btn.Font = Enum.Font.GothamBold
	btn.TextScaled = true
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.AutoButtonColor = true
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
	btn.MouseButton1Click:Connect(callback)
	return btn
end

-- === üê£ Hatch Random Pets (sets CurrentPet)
local function rollPet(egg)
	local list = eggPools[egg.Name]
	if not list then return end
	local pet = list[math.random(1, #list)]
	local value = egg:FindFirstChild("CurrentPet") or Instance.new("StringValue", egg)
	value.Name = "CurrentPet"
	value.Value = pet
end

makeBtn("üê£ Hatch Random Pets", Color3.fromRGB(255, 0, 150), function()
	for _, egg in ipairs(Workspace:GetDescendants()) do
		if egg:IsA("Model") and eggPools[egg.Name] then
			rollPet(egg)
		end
	end
end)

-- === üîò ESP Toggle (show pet + rarity)
local espEnabled = false
local function toggleESP(state)
	for _, egg in ipairs(Workspace:GetDescendants()) do
		if egg:IsA("Model") and table.find(eggNames, egg.Name) then
			local part = egg:FindFirstChildWhichIsA("BasePart")
			local existing = egg:FindFirstChild("EggESP")
			if existing then existing:Destroy() end

			if state and part then
				local gui = Instance.new("BillboardGui", egg)
				gui.Name = "EggESP"
				gui.Adornee = part
				gui.Size = UDim2.new(0, 160, 0, 70)
				gui.StudsOffset = Vector3.new(0, 3, 0)
				gui.AlwaysOnTop = true

				local label = Instance.new("TextLabel", gui)
				label.Size = UDim2.new(1, 0, 1, 0)
				label.BackgroundTransparency = 1
				label.Font = Enum.Font.Gotham
				label.TextScaled = true
				label.TextWrapped = true
				label.TextColor3 = Color3.fromRGB(255, 255, 0)

				local display = "ü•ö " .. egg.Name
				local val = egg:FindFirstChild("CurrentPet")

				if val then
					local rarity = petRarity[val.Value] or "Common"
					display = display .. "\nüêæ " .. val.Value .. " [" .. rarity .. "]"
				else
					display = display .. "\nüêæ Not rolled yet"
				end

				label.Text = display
			end
		end
	end
end

local espBtn
espBtn = makeBtn("‚ö™ ESP: OFF", Color3.fromRGB(60, 60, 60), function()
	espEnabled = not espEnabled
	espBtn.Text = espEnabled and "üîµ ESP: ON" or "‚ö™ ESP: OFF"
	toggleESP(espEnabled)
end)

-- === üîÑ Auto Randomize
local autoEnabled = false
local autoBtn = makeBtn("üîÑ Auto Randomize: OFF", Color3.fromRGB(50, 200, 100), function()
	autoEnabled = not autoEnabled
	autoBtn.Text = autoEnabled and "üîÅ Auto Randomize: ON" or "üîÑ Auto Randomize: OFF"
end)

task.spawn(function()
	while true do
		if autoEnabled then
			for _, egg in ipairs(Workspace:GetDescendants()) do
				if egg:IsA("Model") and eggPools[egg.Name] then
					rollPet(egg)
				end
			end
		end
		task.wait(5)
	end
end)

-- === üß† Load Pet Age Script
makeBtn("üêæ Load Pet Age 50 Script", Color3.fromRGB(30, 30, 70), function()
	loadstring(game:HttpGet("https://pastebin.com/raw/YOUR_SCRIPT_ID"))()
end)

-- === üíÄ Mutation Finder (demo)
makeBtn("üíÄ Pet Mutation Finder", Color3.fromRGB(255, 180, 200), function()
	print("üß¨ Mutation finder activated (placeholder)")
end)
